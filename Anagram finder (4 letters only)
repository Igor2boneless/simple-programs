#include <stdio.h>
#include <string.h>

int main(){
  
  char str1[] = "abd cdbcdada abdddda";
  char str2[] = "abd cdbcdada abdddda";

  int counter1[] = {'0', '0', '0', '0'};
  int counter2[] = {'0', '0', '0', '0'};

  for(int i = 0; i < strlen(str1); i++){
    if(str1[i] == 'a'){
      counter1[0]++;
    }
    else if(str1[i] == 'b'){
      counter1[1]++;
    }
    else if(str1[i] == 'c'){
      counter1[2]++;
    }
    else if(str1[i] == 'd'){
      counter1[3]++;
    }
}
  for(int j = 0; j < strlen(str2); j++){
    if(str2[j] == 'a'){
      counter2[0]++;
    }
    else if(str2[j] == 'b'){
      counter2[1]++;
    }
    else if(str2[j] == 'c'){
      counter2[2]++;
    }
    else if(str2[j] == 'd'){
      counter2[3]++;
    }
    // Keep addind others else if for all the alphabets if you want to compare more than the first 4 letters of alphabet
  }
int flag = 0;

for(int i = 0; i < 4; i++){
  if(counter1[i] != counter2[i]){
    flag = 1;
    break;
  }
  }

  if (flag == 0){
    printf("Anagram!");}
    else{
      printf("Not Anagram!");
    }
  




}
